<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPaddingBottom="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_customerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold|italic"
                android:text="TextView" />
            <TextView
                android:id="@+id/txt_custmobileview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_customerview"
                android:autoLink="phone"
                android:layout_marginStart="20dp"
                android:text="TextView" />

            <CustomWidget.TextAwesome
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_customerview"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="47dp"
                android:textSize="20dp"
                android:text="@string/fa_edit" />

            <CustomWidget.TextAwesome
                android:id="@+id/txt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_alignBaseline="@+id/txt_edit"
                android:layout_alignBottom="@+id/txt_edit"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:text="@string/fa_remove" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
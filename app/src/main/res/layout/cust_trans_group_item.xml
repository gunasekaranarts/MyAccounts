<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPaddingBottom="10dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_customerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold|italic"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_custmobileview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_customerview"
                android:layout_alignBottom="@+id/txt_customerview"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:autoLink="phone"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_customerview"
                android:layout_below="@+id/txt_customerview"
                android:text="Total: 3000" />
            <TextView
                android:id="@+id/txt_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_customerview"
                android:layout_below="@+id/txt_total"
                android:layout_marginEnd="160dp"
                android:text="Received: 1000" />


            <TextView
                android:id="@+id/txt_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignStart="@+id/txt_customerview"
                android:layout_below="@+id/txt_received"
                android:text="Pending: 2000" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/lbl_statistics"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="Reset"
                    android:clickable="true"
                    android:background="@drawable/button_press"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/darkgrey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp">
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/from_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/calender_time"
                        android:focusable="false"
                        android:hint="@string/lbl_from"
                        android:inputType="date"
                        android:paddingRight="0dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/default_text_size" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp">
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/to_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/calender_time"
                        android:focusable="false"
                        android:hint="@string/lbl_to"
                        android:inputType="date"
                        android:paddingRight="0dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/default_text_size" />
                </android.support.design.widget.TextInputLayout>
               <android.support.v7.widget.AppCompatImageButton
                   android:id="@+id/lnk_refresh"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:background="@color/white_trans"
                   android:src="@drawable/ic_action_search"
                   />
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/lnk_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white_trans"
                    android:src="@drawable/ic_action_clear"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_general_summary"
                    android:textStyle="bold"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/black"
                    />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_summary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_expense_summary"
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/update_default_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="Update Default Items"
                    android:clickable="true"
                    android:background="@drawable/button_press"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/Add_Keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Add Item"
                    android:padding="5dp"
                    android:clickable="true"
                    android:background="@drawable/button_press"
                    android:textColor="@color/white"
                    />
                </LinearLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/mChartExpense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>